{
  "name": "sturdy",
  "displayName": "Sturdy",
  "description": "Tells you about merge conflicts before they happen",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:sturdy.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Sturdy",
        "properties": {
          "conf.sturdy.userId": {
            "type": "string",
            "description": "Sturdy user ID",
            "scope": "application"
          },
          "conf.sturdy.api": {
            "type": "string",
            "description": "Sturdy Backend API address",
            "scope": "application"
          },
          "conf.sturdy.token": {
            "type": "string",
            "description": "Sturdy token",
            "scope": "application"
          },
          "conf.sturdy.remote": {
            "type": "string",
            "description": "Sturdy Remote",
            "scope": "window"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "sturdy.setup",
        "title": "Sturdy Setup"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "simple-git": "^2.31.0"
  }
}
